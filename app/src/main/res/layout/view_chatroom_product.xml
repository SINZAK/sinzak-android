<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="chatRoom"
            type="io.sinzak.android.remote.dataclass.chat.ChatRoomResponse.Data" />

        <variable
            name="viewmodel"
            type="io.sinzak.android.ui.main.chat.viewmodel.ChatroomViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/iv_image"
            imgRadius="@{8}"
            remoteImgUrl="@{chatRoom.thumbnail}"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginVertical="7dp"
            android:layout_marginStart="24dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    style="@style/bold13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{v->viewmodel.openSaleDialog()}"
                    android:text='@{chatRoom.complete ? "거래중" : "거래완료"}'
                    app:drawableRightCompat="@drawable/ic_arrow_down" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text="@{chatRoom.productName}" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    style="@style/regular13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />


            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
