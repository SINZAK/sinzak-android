<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="vm"
            type="io.sinzak.android.ui.main.profile.viewmodel.ProfileWorkViewModel" />
        <variable
            name="pVm"
            type="io.sinzak.android.ui.main.profile.viewmodel.ProfileViewModel"/>
        <import type="io.sinzak.android.enums.Page"/>
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:paddingTop="24dp"
            android:layout_marginStart="15dp"
            android:paddingEnd="11.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_profile_work_title"
            style="@style/bold16"
            android:paddingStart="13.3dp"
            android:layout_marginBottom="7dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="12.4dp"

            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toTopOf="parent"
                adapter="@{vm.adapter}"
                marginHorizon="@{12.5f}"
                marginVertical="@{0f}"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/iv_arrow_right"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="11.5dp"
                android:id="@+id/iv_arrow_right"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="@{v -> pVm.changePage(Page.PROFILE_WORK)}"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>