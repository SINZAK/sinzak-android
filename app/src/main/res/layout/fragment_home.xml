<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="fragment"
            type="io.sinzak.android.ui.main.home.HomeFragment" />
        <variable
            name="viewmodel"
            type="io.sinzak.android.ui.main.home.HomeViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="48dp"
            android:id="@+id/fl_appbar"/>

        <ImageView
            android:layout_width="343dp"
            android:layout_height="147dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_banner_temp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_appbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
