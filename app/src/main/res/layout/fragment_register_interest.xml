<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fg"
            type="io.sinzak.android.ui.login.interest.InterestFragment" />

        <variable
            name="vm"
            type="io.sinzak.android.ui.login.interest.InterestViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appbar_height"
            android:background="@color/background0"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:onClick="@{v->fg.navigateOnBackPressed()}"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_back" />

            <TextView
                style="@style/bold16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                />

            <Space
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="16dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_appbar">

            <TextView

                style="@style/bold20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="관심있는 장르를 선택해주세요." />

            <TextView
                android:layout_marginRight="36dp"
                style="@style/bold16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="순수예술" />

            <com.google.android.material.chip.ChipGroup
                android:layout_marginTop="8dp"
                android:id="@+id/cg_pure"
                isSelect="@{fg.inflateDesignChips(vm.chosenDesignChip)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"/>

            <TextView
                style="@style/bold16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="디자인" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_design"
                android:layout_marginTop="8dp"
                isSelect="@{fg.inflatePureChips(vm.chosenPureChip)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            style="@style/medium16"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/btn_red_filled"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center"
            android:onClick="@{v->vm.onSubmit()}"
            android:text="@string/str_next"
            android:textColor="@color/on_primary"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
