<?xml version="1.0" encoding="utf-8"?>
<layout >

    <data>
        <variable
            name="fg"
            type="io.sinzak.android.ui.main.postwrite.fragment.ImageFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appbar_height"
            android:background="@color/on_primary"
            android:elevation="2dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:onClick="@{v->fg.navigateOnBackPressed()}"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_back" />

            <TextView
                style="@style/bold16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/str_submit_picture" />

            <Space
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="16dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/btn_red_filled"
            android:text="@string/str_next"
            android:gravity="center"
            style="@style/medium16"
            android:layout_marginBottom="26dp"
            android:onClick="@{v->fg.moveToInfo()}"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/on_primary"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
